<Page x:Class="mop.Pages.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:mop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1450"
      Title="ClientsPage">

    <Grid Background="White">

        <Button Content="← назад"
                    FontSize="34"
                    FontWeight="Bold"
                    Width="200" Height="100"
                    Style="{StaticResource back}"
                    BorderThickness="0" 
                    x:Name="BackBtn" Click="BackBtn_Click" Margin="65,10,1015,602">
          
        </Button>

        <Image Source="/Images/Vector.png"
                   Width="800"
                       Margin="889,0,-239,306"/>
        <Image Source="/Images/Vector.png"
                   Width="800"
                       Margin="-240,313,890,-7" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-180"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="клиенты" 
           FontSize="70" 
           Margin="0 0 0 15"
           FontWeight="Bold"
           HorizontalAlignment="Center">
                <TextBlock.Foreground>
                    <LinearGradientBrush>
                        <GradientStop Color="#C0D5B3" Offset="0"/>
                        <GradientStop Color="#B3C9D5" Offset="0.5"/>
                        <GradientStop Color="#A3AEE6" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <StackPanel Orientation="Horizontal" Margin="0 20">
                <TextBlock Text="фамилия: " FontWeight="Bold" FontSize="25">
                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#C0D5B3" Offset="0"/>
                            <GradientStop Color="#B3C9D5" Offset="0.5"/>
                            <GradientStop Color="#A3AEE6" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
                <Border BorderThickness="4" CornerRadius="26" Grid.RowSpan="2" Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="1" Height="40" Width="170">
                    <Border.BorderBrush>
                        <LinearGradientBrush>
                            <GradientStop Color="#C0D5B3" Offset="0"/>
                            <GradientStop Color="#B3C9D5" Offset="0.5"/>
                            <GradientStop Color="#A3AEE6" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <TextBox Background="Transparent" FontSize="25" BorderThickness="0" Height="40" BorderBrush="Transparent" Padding="15 0 0 0" x:Name="surnameTb" TextChanged="surnameTb_TextChanged">
                        <TextBox.Foreground>
                            <LinearGradientBrush>
                                <GradientStop Color="#C0D5B3" Offset="0"/>
                                <GradientStop Color="#B3C9D5" Offset="0.5"/>
                                <GradientStop Color="#A3AEE6" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBox.Foreground>
                    </TextBox>
                </Border>
            </StackPanel>
            <ListView x:Name="clientsLv" 
                    Width="1200" Height="400"
                    FontSize="20"
                    ItemsSource="{Binding clients}"
              >
                <ListView.Foreground>
                    <LinearGradientBrush>
                        <GradientStop Color="#C0D5B3" Offset="0"/>
                        <GradientStop Color="#B3C9D5" Offset="0.5"/>
                        <GradientStop Color="#A3AEE6" Offset="1"/>
                    </LinearGradientBrush>
                </ListView.Foreground>
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Header="Id" 
                                          Width="35">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style  TargetType="GridViewColumnHeader">
                                        <Setter Property="Foreground" Value="#B8CEC5" />
                                        <Setter Property="FontWeight" Value="DemiBold"/>
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>

                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ID}" Foreground="#B8CEC5"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="ФИО" 
                                          Width="500">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style  TargetType="GridViewColumnHeader">
                                        <Setter Property="Foreground" Value="#B8CEC5" />
                                        <Setter Property="FontWeight" Value="DemiBold"/>
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Surname}" Foreground="#B8CEC5"/>
                                            <TextBlock Text=" "/>
                                            <TextBlock Text="{Binding Name}" Foreground="#B8CEC5"/>
                                            <TextBlock Text=" "/>
                                            <TextBlock Text="{Binding Patronymic}" Foreground="#B8CEC5"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="контакты" 
                                          Width="220">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style  TargetType="GridViewColumnHeader">
                                        <Setter Property="Foreground" Value="#B7CCCA" />
                                        <Setter Property="FontWeight" Value="DemiBold"/>
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Phone}" Foreground="#B7CCCA"/>
                                            <TextBlock Text="{Binding Email}" Foreground="#B7CCCA"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="тип клиента" 
                                          Width="380">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style  TargetType="GridViewColumnHeader">
                                        <Setter Property="Foreground" Value="#B3C9D5" />
                                        <Setter Property="FontWeight" Value="DemiBold"/>
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ClientTypes.Name}" Foreground="#B3C9D5"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
        <StackPanel Orientation="Horizontal" Height="80"
                    Margin="0 20">
            <Border CornerRadius="40"
                Width="80">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#C0D5B3" Offset="0"/>
                        <GradientStop Color="#B3C9D5" Offset="0.5"/>
                        <GradientStop Color="#A3AEE6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Button Content="+"
                    FontSize="40"
                    FontWeight="Bold"
                    Height="80" Style="{StaticResource circle}"
                    ToolTip="добавление"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0" 
                    x:Name="addBtn" Click="addBtn_Click" HorizontalAlignment="Left" Width="80"/>
            </Border>
            <Border CornerRadius="40"
                Width="80">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#C0D5B3" Offset="0"/>
                        <GradientStop Color="#B3C9D5" Offset="0.5"/>
                        <GradientStop Color="#A3AEE6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Button Content="×"
                    FontSize="40"
                    FontWeight="Bold"
                    Height="80" Style="{StaticResource circle}"
                    ToolTip="удаление"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0" 
                    x:Name="delBtn" Click="delBtn_Click"/>
            </Border>
            <Border CornerRadius="40"
                Width="80">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#C0D5B3" Offset="0"/>
                        <GradientStop Color="#B3C9D5" Offset="0.5"/>
                        <GradientStop Color="#A3AEE6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Button Content="⋮"
                        FontSize="40"
                        FontWeight="Bold"
                        Height="80" Style="{StaticResource circle}"
                        ToolTip="изменение"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0" 
                        x:Name="editBtn" Click="editBtn_Click"/>
            </Border>
        </StackPanel>
        </StackPanel>
    </Grid>
</Page>
