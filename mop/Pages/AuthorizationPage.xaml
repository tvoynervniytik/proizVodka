<Page x:Class="mop.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:mop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1450"
      Title="AuthorizationPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <TextBlock Text="авторизация" 
                       FontSize="70" 
                       Margin="0 0 0 15"
                       FontWeight="Bold">
                <TextBlock.Foreground>
                    <LinearGradientBrush>
                        <GradientStop Color="#C0D5B3" Offset="0"/>
                        <GradientStop Color="#B3C9D5" Offset="0.5"/>
                        <GradientStop Color="#A3AEE6" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <StackPanel>
                <StackPanel>
                    <TextBlock Text="логин" FontSize="45"
                               FontWeight="DemiBold"
                               Margin="0 0 0 15">
                        <TextBlock.Foreground>
                            <LinearGradientBrush>
                                <GradientStop Color="#C0D5B3" Offset="0"/>
                                <GradientStop Color="#B3C9D5" Offset="0.5"/>
                                <GradientStop Color="#A3AEE6" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <Border BorderThickness="4"
                            CornerRadius="26"
                            Margin="0 0 0 15"
                            Height="45">
                        <Border.BorderBrush>
                            <LinearGradientBrush>
                                <GradientStop Color="#C0D5B3" Offset="0"/>
                                <GradientStop Color="#B3C9D5" Offset="0.5"/>
                                <GradientStop Color="#A3AEE6" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <TextBox Background="Transparent"
                                 FontSize="25"
                                 Height="45"
                                 BorderThickness="0"
                                 Padding="15 0 0 0"
                                 x:Name="loginTb">

                            <TextBlock.Foreground>
                                <LinearGradientBrush>
                                    <GradientStop Color="#C0D5B3" Offset="0"/>
                                    <GradientStop Color="#B3C9D5" Offset="0.5"/>
                                    <GradientStop Color="#A3AEE6" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBox>
                    </Border>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="пароль" FontSize="45"
                               FontWeight="DemiBold"
                               Margin="0 0 0 15">
                        <TextBlock.Foreground>
                            <LinearGradientBrush>
                                <GradientStop Color="#C0D5B3" Offset="0"/>
                                <GradientStop Color="#B3C9D5" Offset="0.5"/>
                                <GradientStop Color="#A3AEE6" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <Border BorderThickness="4"
                            CornerRadius="26"
                            Margin="0 0 0 15"
                            Height="45">
                        <Border.BorderBrush>
                            <LinearGradientBrush>
                                <GradientStop Color="#C0D5B3" Offset="0"/>
                                <GradientStop Color="#B3C9D5" Offset="0.5"/>
                                <GradientStop Color="#A3AEE6" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <PasswordBox Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="25"
                                     Height="45"
                                     Padding="15 0 0 0"
                                     x:Name="passwordTb">

                            <PasswordBox.Foreground>
                                <LinearGradientBrush>
                                    <GradientStop Color="#C0D5B3" Offset="0"/>
                                    <GradientStop Color="#B3C9D5" Offset="0.5"/>
                                    <GradientStop Color="#A3AEE6" Offset="1"/>
                                </LinearGradientBrush>
                            </PasswordBox.Foreground>
                        </PasswordBox>
                    </Border>
                </StackPanel>
            </StackPanel>
            <Border CornerRadius="26"
                    Margin="0 10">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#C0D5B3" Offset="0"/>
                        <GradientStop Color="#B3C9D5" Offset="0.5"/>
                        <GradientStop Color="#A3AEE6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Button Content="войти"
                        FontSize="40"
                        FontWeight="Bold"
                        Height="60"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0" Click="Button_Click"/>
            </Border>
            
        </StackPanel>

        <Image Source="/Images/Vector.png"
                   Width="800"
                       Margin="889,0,-239,306"/>
        <Image Source="/Images/Vector.png"
                   Width="800"
                       Margin="-240,313,890,-7" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-180"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

    </Grid>
</Page>
