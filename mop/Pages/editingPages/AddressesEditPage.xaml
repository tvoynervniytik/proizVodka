<Page x:Class="mop.Pages.editingPages.AddressesEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:mop.Pages.editingPages"
      mc:Ignorable="d" 
       d:DesignHeight="900" d:DesignWidth="1450"
      Title="AddressesEditPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Source="/Images/Vector.png"
           Grid.Column="2" 
           Grid.RowSpan="4" 
           VerticalAlignment="Top"
           HorizontalAlignment="Right"/>
        <Image Source="/Images/Vector.png"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Left"
           RenderTransformOrigin="0.5,0.5" 
           Grid.RowSpan="4" Grid.Row="3">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-180.071"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Button Content="← назад"
                FontSize="34"
                FontWeight="Bold"
                Width="200" Height="100"
                Style="{StaticResource back}"
                BorderThickness="0" 
                x:Name="BackBtn" 
                Click="BackBtn_Click"
                Grid.RowSpan="2" Margin="171,-10,112,10">
        </Button>
        <TextBlock Text="изменить объект"
               FontSize="55" 
               FontWeight="Bold"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Grid.Column="0" Grid.RowSpan="2"
               Grid.ColumnSpan="3">
            <TextBlock.Foreground>
                <LinearGradientBrush>
                    <GradientStop Color="#C0D5B3" Offset="0"/>
                    <GradientStop Color="#B3C9D5" Offset="0.5"/>
                    <GradientStop Color="#A3AEE6" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

        <TextBlock Text="клиент" 
                    FontSize="35"
                    FontWeight="Bold"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Grid.RowSpan="2" Grid.ColumnSpan="2" 
                    Grid.Row="1">
            <TextBlock.Foreground>
                <LinearGradientBrush>
                    <GradientStop Color="#C0D5B3" Offset="0"/>
                    <GradientStop Color="#B3C9D5" Offset="0.5"/>
                    <GradientStop Color="#A3AEE6" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <ComboBox Grid.RowSpan="2" Grid.ColumnSpan="2" 
              Grid.Row="1" Grid.Column="1"
              x:Name="clientsCb"
              Width="250" Height="60" FontWeight="Bold"
              ItemsSource="{Binding clients}">
            <ComboBox.Foreground>
                <LinearGradientBrush>
                    <GradientStop Color="#C0D5B3" Offset="0"/>
                    <GradientStop Color="#B3C9D5" Offset="0.5"/>
                    <GradientStop Color="#A3AEE6" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Foreground>
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text=" "/>

                        <TextBlock Text="{Binding Surname}"/>
                        <TextBlock Text=" "/>

                        <TextBlock Text="{Binding Patronymic}"/>


                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>


        <TextBlock Text="улица" 
               TextWrapping="Wrap"
               FontSize="35" 
               FontWeight="Bold"
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               Grid.RowSpan="2" Grid.ColumnSpan="2" 
               Grid.Row="2">
            <TextBlock.Foreground>
                <LinearGradientBrush>
                    <GradientStop Color="#C0D5B3" Offset="0"/>
                    <GradientStop Color="#B3C9D5" Offset="0.5"/>
                    <GradientStop Color="#A3AEE6" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <Border BorderThickness="4"
                CornerRadius="26"
                Grid.RowSpan="2" Grid.ColumnSpan="2" 
                Grid.Row="2" Grid.Column="1"
                Height="100"  Width="400">
            <Border.BorderBrush>
                <LinearGradientBrush>
                    <GradientStop Color="#C0D5B3" Offset="0"/>
                    <GradientStop Color="#B3C9D5" Offset="0.5"/>
                    <GradientStop Color="#A3AEE6" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <TextBox Background="Transparent"
                 FontSize="35"
                 Height="100" 
                     TextWrapping="Wrap"
                     Width="400"
                 BorderThickness="0"
                 Padding="15 0 0 0"
                 x:Name="streetTb">

                <TextBlock.Foreground>
                    <LinearGradientBrush>
                        <GradientStop Color="#C0D5B3" Offset="0"/>
                        <GradientStop Color="#B3C9D5" Offset="0.5"/>
                        <GradientStop Color="#A3AEE6" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBox>
        </Border>

        <TextBlock Text="дом" 
              FontSize="35"
               FontWeight="Bold"
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               Grid.RowSpan="2" Grid.ColumnSpan="2" 
               Grid.Row="3">
            <TextBlock.Foreground>
                <LinearGradientBrush>
                    <GradientStop Color="#C0D5B3" Offset="0"/>
                    <GradientStop Color="#B3C9D5" Offset="0.5"/>
                    <GradientStop Color="#A3AEE6" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

        <StackPanel  Grid.RowSpan="2" Grid.ColumnSpan="1" 
                     Grid.Row="3" Grid.Column="1"
                     HorizontalAlignment="Left" VerticalAlignment="Center"
                     Orientation="Vertical" Margin="199,0,0,0">
            <TextBlock Text="номер" 
                        FontSize="35" 
                        TextWrapping="Wrap"
                        Width="150"
                        TextAlignment="Center"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <TextBlock.Foreground>
                    <LinearGradientBrush>
                        <GradientStop Color="#C0D5B3" Offset="0"/>
                        <GradientStop Color="#B3C9D5" Offset="0.5"/>
                        <GradientStop Color="#A3AEE6" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <Border BorderThickness="4"
                CornerRadius="26"
               
                Height="60" Width="250">
                <Border.BorderBrush>
                    <LinearGradientBrush>
                        <GradientStop Color="#C0D5B3" Offset="0"/>
                        <GradientStop Color="#B3C9D5" Offset="0.5"/>
                        <GradientStop Color="#A3AEE6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <TextBox Background="Transparent"
                 FontSize="35" 
                 Height="60"
                 BorderThickness="0"
                 Padding="15 0 0 0"
                 x:Name="houseNumberTb" TextChanged="houseNumberTb_TextChanged" >

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#C0D5B3" Offset="0"/>
                            <GradientStop Color="#B3C9D5" Offset="0.5"/>
                            <GradientStop Color="#A3AEE6" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBox>
            </Border>
        </StackPanel>

        <StackPanel Grid.RowSpan="2" Grid.ColumnSpan="1" 
                Grid.Row="3" Grid.Column="2"
             HorizontalAlignment="Center" VerticalAlignment="Center"
             Orientation="Vertical">
            <TextBlock Text="литер" 
             FontSize="35" 
             TextWrapping="Wrap"
             Width="200"
             TextAlignment="Center"
             HorizontalAlignment="Center" 
             VerticalAlignment="Center">
                <TextBlock.Foreground>
                    <LinearGradientBrush>
                        <GradientStop Color="#C0D5B3" Offset="0"/>
                        <GradientStop Color="#B3C9D5" Offset="0.5"/>
                        <GradientStop Color="#A3AEE6" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <Border BorderThickness="4"
                CornerRadius="26"
                Height="60" Width="250">
                <Border.BorderBrush>
                    <LinearGradientBrush>
                        <GradientStop Color="#C0D5B3" Offset="0"/>
                        <GradientStop Color="#B3C9D5" Offset="0.5"/>
                        <GradientStop Color="#A3AEE6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <TextBox Background="Transparent"
                 FontSize="35" 
                 Height="60"
                 BorderThickness="0"
                 Padding="15 0 0 0"
                 x:Name="houseNameTb" TextChanged="houseNameTb_TextChanged" >

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#C0D5B3" Offset="0"/>
                            <GradientStop Color="#B3C9D5" Offset="0.5"/>
                            <GradientStop Color="#A3AEE6" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBox>
            </Border>
        </StackPanel>

        <TextBlock Text="кв/офис" 
      FontSize="35"
       FontWeight="Bold"
       HorizontalAlignment="Center" 
       VerticalAlignment="Center" 
       Grid.RowSpan="2" Grid.ColumnSpan="2" 
       Grid.Row="4">
            <TextBlock.Foreground>
                <LinearGradientBrush>
                    <GradientStop Color="#C0D5B3" Offset="0"/>
                    <GradientStop Color="#B3C9D5" Offset="0.5"/>
                    <GradientStop Color="#A3AEE6" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <Border BorderThickness="4"
        CornerRadius="26"
        Grid.RowSpan="2" Grid.ColumnSpan="2" 
        Grid.Row="4" Grid.Column="1"
        Height="60" Width="250">
            <Border.BorderBrush>
                <LinearGradientBrush>
                    <GradientStop Color="#C0D5B3" Offset="0"/>
                    <GradientStop Color="#B3C9D5" Offset="0.5"/>
                    <GradientStop Color="#A3AEE6" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <TextBox Background="Transparent"
                    FontSize="35"  
                    Height="50" 
                    BorderThickness="0"
                    Padding="15 0 0 0"
                    x:Name="roomTb" Margin="0,0,0,1" 
                     VerticalAlignment="Bottom" 
                     TextChanged="roomTb_TextChanged" >

                <TextBlock.Foreground>
                    <LinearGradientBrush>
                        <GradientStop Color="#C0D5B3" Offset="0"/>
                        <GradientStop Color="#B3C9D5" Offset="0.5"/>
                        <GradientStop Color="#A3AEE6" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBox>
        </Border>

        <Border CornerRadius="26"  Width="250"
            Grid.Column="1" Height="60"
            Grid.Row="8">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#C0D5B3" Offset="0"/>
                    <GradientStop Color="#B3C9D5" Offset="0.5"/>
                    <GradientStop Color="#A3AEE6" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Button Content="изменить"
                FontSize="45" Height="60"
                FontWeight="Bold"
                Foreground="White"
                Background="Transparent"
                BorderThickness="0" 
                x:Name="SaveBtn" Click="SaveBtn_Click" VerticalAlignment="Top"/>
        </Border>

    </Grid>
</Page>
